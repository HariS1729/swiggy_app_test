<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <rotate android:fromDegrees="-35" android:toDegrees="0" android:pivotX="100%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dimen_4dp"/>
                <solid android:color="@color/bubble_back"/>
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dimen_10dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_4dp"/>
            <solid android:color="@color/bubble_back"/>
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="-35" android:toDegrees="0" android:pivotX="100%" android:pivotY="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dimen_4dp"/>
                <solid android:color="@color/white"/>
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dimen_8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dimen_8dp"/>
        </shape>
    </item>
</layer-list>
